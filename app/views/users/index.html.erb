<div class="container">
  <div class="row">

    <p id="notice"><%= notice %></p>


    <div class="col-xs-3">
      <sidebar>

		<h2>User info</h2>
		<%= render 'users/profile', user: @user %>
		<!--同コントローラーのviewで表示ならusersは省略可 -->

		<h2>New book</h2>
		<%= render 'books/newform', book: @book %>

      </sidebar>
    </div>

<div class="container">
	 <div class="row">

      <div class="col-xs-9">
       <h2>Users</h2>
        <table class="table table=striped">
         <thead>
           <tr>
               <th class="col-xs-5">image</th>
               <th class="col-xs-7">name</th>
            </tr>
         </thead>
         <% @users.each do |users| %>
					 <tbody>
						<tr>
						    <td><%= attachment_image_tag @user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", style: "width: 50px; height: 50px;"  %></td>
							<td> <%= users.name %></td>
							<td> <%= link_to "Show",user_path(users) %></td>
						</tr>
					</tbody>
					<% end%>
        </table>
	   </div>
   </div>
</div>

<!--users一覧 -->

